<Window x:Class="LetsClimb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LetsClimb"
        mc:Ignorable="d"
        Title="Let's Climb" Width="700" Height="550">
    <Grid>
        <TabControl Grid.ColumnSpan="2" Margin="10">

            <!--Cmpetition tab item-->
            <TabItem Header="Competition">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <!--Competition panel-->
                    <StackPanel Grid.Column="0">
                        <StackPanel Margin="5">
                            <Label Content="Name"/>
                            <TextBox Name="CompetitionNameTextBox"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Label Content="Categories"/>
                            <TextBox Name="CompetitionCategoryOneTextBox" Margin="2" TextChanged="CompetitionCategoryOneTextBox_TextChanged"/>
                            <TextBox Name="CompetitionCategoryTwoTextBox" IsEnabled="False" Margin="2" TextChanged="CompetitionCategoryTwoTextBox_TextChanged"/>
                            <TextBox Name="CompetitionCategoryThreeTextBox" IsEnabled="False" Margin="2" TextChanged="CompetitionCategoryThreeTextBox_TextChanged"/>
                            <TextBox Name="CompetitionCategoryFourTextBox" IsEnabled="False" Margin="2" TextChanged="CompetitionCategoryFourTextBox_TextChanged"/>
                            <TextBox Name="CompetitionCategoryFiveTextBox" IsEnabled="False" Margin="2" TextChanged="CompetitionCategoryFiveTextBox_TextChanged"/>
                            <TextBox Name="CompetitionCategorySixTextBox" IsEnabled="False" Margin="2"/>
                        </StackPanel>
                        <StackPanel>
                            <Button Name="CompetitionAddButton" Content="Add" Width="100" Margin="5" Click="CompetitionAddButton_Click"/>
                            <Button Name="CompetitionDeleteButton" Content="Delete" Width="100" Margin="5" Click="CompetitionDeleteButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!--Competition List View-->
                    <ListView Name="CompetitionListView"  Grid.Column="1" Margin="5" ItemsSource="{Binding CompetitionCollection}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding Name}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

            <!--Competitor tab item-->
            <TabItem  Header="Competitor">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <!--Competitor panel-->
                    <StackPanel Grid.Column="0">
                        <StackPanel Margin="5">
                            <Label Content="Name"/>
                            <TextBox Name="NameTextBox"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Label Content="LastName"/>
                            <TextBox Name="LastNameTextBox"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Label Content="Sex"/>
                            <ComboBox Name="SexComboBox"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Label Content="Category"/>
                            <ComboBox Name="CategoryComboBox"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Label Content="Top"/>
                            <TextBox Name="TopTextBox"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Label Content="Bonus"/>
                            <TextBox Name="BonusTextBox"/>
                        </StackPanel>
                        <StackPanel>
                            <Button Name="AddButton" Content="Add" Width="100" Margin="5" Click="AddButton_Click"/>
                            <Button Name="DeleteButton" Content="Delete" Width="100" Margin="5" Click="DeleteButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!--Competitor List View-->
                    <ListView Name="CompetitorListView" Grid.Column="1" Margin="5" ItemsSource="{Binding CompetitorList}" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Place" Width="50"/>
                                <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Last Name" Width="100" DisplayMemberBinding="{Binding LastName}"/>
                                <GridViewColumn Header="Top" Width="50" DisplayMemberBinding="{Binding Top}"/>
                                <GridViewColumn Header="Bonus" Width="50" DisplayMemberBinding="{Binding Bonus}"/>
                                <GridViewColumn Header="Category" Width="100" DisplayMemberBinding="{Binding Category}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>